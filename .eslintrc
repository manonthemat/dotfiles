{
    "env": { "node": true },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "ecmaFeatures": {
        "templateStrings": true,
        "objectLiteralShorthandProperties": true,
        "arrowFunctions": true,
        "blockBindings": true,
        "forOf": true,
        "spread": true,
        "jsx": true
    },
    "rules": {
        "strict": 0,
        "quotes": [1, "single"],
        "camelcase": 1,
        "eqeqeq": [2, "smart"]
    }
}
